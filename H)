using System;

namespace atv5
{
	class Program
	{
		public static void Main(string[] args)
		{
			
        Console.WriteLine("Insira uma letra:");

        char letra = Char.ToLower(Console.ReadKey().KeyChar);

      if (letra >= 'a' && letra <= 'z') // Verifica se é uma letra do alfabeto
        {
            switch (letra)
            {
                case 'a':
                case 'e':
                case 'i':
                case 'o':
                case 'u':
                    Console.WriteLine("\nA letra é uma vogal.");
                    break;
                default:
                    Console.WriteLine("\nA letra é uma consoante.");
                    break;
            }
        }
        else
        {
            Console.WriteLine("\nIsso não é uma letra válida.");
        }
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
